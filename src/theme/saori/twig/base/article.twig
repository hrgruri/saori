<article>
    <span class="article-date">{{article.date(maker.theme('date-format'))}}</span>
    <h1 class="article-title"><a href="{{article.url}}">{{article.title}}</a></h1>
    {% if article.tags|length > 0 %}
        <ul class="article-tags">
            {% for tag in article.tags %}
                <li><a href="/tag/{{tag}}/1">{{tag}}</a></li>
            {% endfor %}
        </ul>
    {% endif %}
    <div class="article-contents">
        {% autoescape false %}
            {{article.html}}
        {% endautoescape %}
    </div>
    <div class="article-share">
        {% set share_list = maker.env('share') %}
        {% if 'twitter' in share_list %}
            <a href="https://twitter.com/share" class="twitter-share-button" data-url="{{article.url}}" data-text="{{article.title}} - {{maker.title}}">Tweet</a>
        {% endif %}
        {% if 'pocket' in share_list %}
            <a data-pocket-label="pocket" data-pocket-count="none" class="pocket-btn" data-lang="en" data-save-url="{{article.url}}"></a>
        {% endif %}
    </div>

    {% if (not newer_article is empty) or (not older_article is empty) %}
        <div class="pager">
            {% if not newer_article is empty %}
                <div id="pager-next">
                    <div class="lines"><span>next article</span></div>
                    <a href="{{newer_article.url}}">{{newer_article.title}}</a>
                </div>
            {% endif %}
            {% if not older_article is empty %}
                <div id="pager-prev">
                    <div class="lines"><span>previous article</span></div>
                    <a href="{{older_article.url}}">{{older_article.title}}</a>
                </div>
            {% endif %}
        </div>
    {% endif %}
</article>
